{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://directstock.local/docs/agents/handoff.schema.json",
  "title": "DirectStock Agent Handoff",
  "type": "object",
  "required": [
    "objective",
    "in_scope",
    "out_of_scope",
    "changed_files",
    "verification",
    "open_risks",
    "next_actions",
    "assumptions"
  ],
  "properties": {
    "objective": { "type": "string", "minLength": 1 },
    "in_scope": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "out_of_scope": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "changed_files": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "verification": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["command", "result"],
        "properties": {
          "command": { "type": "string", "minLength": 1 },
          "result": { "type": "string", "enum": ["PASS", "FAIL"] },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "open_risks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["risk", "impact", "owner"],
        "properties": {
          "risk": { "type": "string" },
          "impact": { "type": "string" },
          "owner": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "next_actions": { "type": "array", "items": { "type": "string" }, "minItems": 1, "maxItems": 3 },
    "assumptions": { "type": "array", "items": { "type": "string" } },
    "a2a": {
      "type": "object",
      "required": ["protocol_version", "sender", "receiver", "interaction_id"],
      "properties": {
        "protocol_version": { "type": "string", "enum": ["0.3"] },
        "sender": {
          "type": "object",
          "required": ["agent_id", "provider", "model"],
          "properties": {
            "agent_id": { "type": "string", "minLength": 1 },
            "provider": { "type": "string", "minLength": 1 },
            "model": { "type": "string", "minLength": 1 }
          },
          "additionalProperties": false
        },
        "receiver": {
          "type": "object",
          "required": ["agent_id", "provider", "model"],
          "properties": {
            "agent_id": { "type": "string", "minLength": 1 },
            "provider": { "type": "string", "minLength": 1 },
            "model": { "type": "string", "minLength": 1 }
          },
          "additionalProperties": false
        },
        "capabilities_declared": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "capabilities_required": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "interaction_id": { "type": "string", "minLength": 1 },
        "checkpoint_id": { "type": "string", "minLength": 1 },
        "agent_card_ref": { "type": "string", "minLength": 1 },
        "handoff_reason": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
